{% extends "base.html.twig" %}

{% block title %} Statistiques {% endblock %}

{% block head %} 
<style>
    body{ background-image: url('assets/fondecran2.png');}
            #area-chart,
            #line-chart,
            #bar-chart,
            #stacked,
            #pie-chart{
                min-height: 250px;
                }
