{% extends 'base.html.twig' %}

{% block title %} Conges {% endblock %}
{% block body %}

    <form method="post" action="{{ path('conges_delete', {'id': conge.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
        <input type="hidden" name="_method" value="DELETE">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ conge.id) }}">
        <button class="btn">Delete</button>
    </form>
{% endblock %}