{% extends 'base.html.twig' %}

{% block title %}Message{% endblock %}

{% block body %}
    <h1>Message</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ message.id }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ message.titre }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ message.date ? message.date|date('Y-m-d') : '' }}</td>   
            </tr>
            <tr>
                <th>Statut</th>
                <td>{{ message.statut ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ message.contenu }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('listemessages') }}">back to list</a>

